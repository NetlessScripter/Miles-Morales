local JukeboxUtils = {}

-- Extract domain from URL
function JukeboxUtils.getDomainFromUrl(url)
    if not url or url == "" then return nil end
    local domain = string.match(url, "^(?:.*://)?([^/:]+)")
    return domain
end

-- Generate a random alphanumeric string
function JukeboxUtils.randomString(length)
    local charset = "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
    local str = {}
    for i = 1, length do
        local rand = math.random(1, #charset)
        str[i] = string.sub(charset, rand, rand)
    end
    return table.concat(str)
end

-- Trim functions
function JukeboxUtils.leftTrim(s)
    return s:match("^%s*(.-)$")
end

function JukeboxUtils.rightTrim(s)
    return s:match("^(.-)%s*$")
end

function JukeboxUtils.trim(s)
    return s:match("^%s*(.-)%s*$")
end

return JukeboxUtils
